{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
